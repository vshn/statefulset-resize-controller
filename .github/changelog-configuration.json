{
  "pr_template": "- ${{TITLE}} (#${{NUMBER}})",
  "categories": [
    {
      "title": "## 🚀 Features",
      "labels": [
        "minor"
      ]
    },
    {
      "title": "## 🔎 Breaking Changes",
      "labels": [
        "major"
      ]
    },
    {
      "title": "## 🐛 Fixes",
      "labels": [
        "patch"
      ]
    },
    {
      "title": "## 📄 Documentation",
      "labels": [
        "documentation"
      ]
    },
    {
      "title": "## 🔗 Dependency Updates",
      "labels": [
        "dependency"
      ]
    }
  ],
  "template": "${{CATEGORIZED_COUNT}} changes since ${{FROM_TAG}}\n\n${{CHANGELOG}}"
}
